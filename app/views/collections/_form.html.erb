<div class="container">
<%-# This syntax [collections, @collection] tells form_for to use the routes from the engine named collections %>
<%= form_for([collections, @collection]) do |f| %>
  <% if @collection.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@collection.errors.count, "error") %> prohibited this topic from being saved:</h2>

      <ul>
      <% @collection.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, "Name" %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :collection_num, "Number" %><br />
    <%= f.text_field :collection_num %>
  </div>

  <div class="field">
    <%= f.label 'Upload Photo'%>
    <%= render partial: 'collections/image_display', locals: {item:@collection, width:60} %>
    <%= f.file_field 'thumbnail' %></p>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>

  <%= hidden_collection_members %>
  
  <div class="actions">
    <%= f.submit class:"btn btn-primary collection-edit" %>
    <%= link_to 'Cancel', collection_cancel_path(@collection), class:"btn btn-primary collection-cancel" %>
  </div>
<% end %>
</div>
