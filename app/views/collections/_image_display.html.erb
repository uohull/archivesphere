<% width ||=200 %>
<% if item.image_avail? %>
    <%= link_to  image_tag(sufia.download_path(item, datastream_id: 'thumbnail'), {:width => width}) , collections.collection_path(item.noid) %>
<% else %>
    <%= link_to image_tag("/assets/folder.png", {:width=>width}), collections.collection_path(item.noid) %>
<% end %>
