<div id="masthead" class="row-fluid">
  <div class="span12">
    <section class="row-fluid">
      <div class="span5">
        <%= render partial: '/logo' %>
      </div><!-- Penn State Mark -->
      <nav class="span7">
        <ul class="nav inline pull-right">
          <li class="top_nav" <%= 'class="active"' if params[:controller] == "catalog" and action_name == "index" %>><a href="/">Home</a></li>
            <li class="top_nav" <%= 'class="active"' if action_name == "about" %>><a href="/about/">About</a></li>
