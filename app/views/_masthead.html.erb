        </ul>
      </nav><!-- Navigation for Static Links and User Action Bar -->
    </section><!-- top row for the penn state mark and user action bar -->
    <section class="row-fluid">
      <div class="offset8 span4">
        <%= render :partial => 'catalog/search_form' %>
      </div><!-- ScholarSphere search -->
    </section><!-- bottom row for the ScholarSphere search -->
  </div><!-- sets the full number of columns -->
</div> <!-- /masthead -->
<%= generate_breadcrumb %>

